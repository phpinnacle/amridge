{
    "name": "phpinnacle/amridge",
    "type": "library",
    "description": "PHPinnacle async Goridge client implementation",
    "keywords": [
        "phpinnacle", "async", "amphp", "go", "golang", "goridge"
    ],
    "homepage": "https://github.com/phpinnacle/amridge",
    "license": "MIT",
    "authors": [
        {
            "name": "PHPinnacle",
            "email": "dev@phpinnacle.com",
            "homepage": "https://phpinnacle.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "spiral/goridge": "^2.0.0",
        "amphp/socket": "^0.10.11",
        "phpinnacle/buffer": "^1.0"
    },
    "require-dev": {
        "phpbench/phpbench": "^0.16",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "PHPinnacle\\Amridge\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPinnacle\\Amridge\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "bench": "phpbench run benchmarks --report=aggregate"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
